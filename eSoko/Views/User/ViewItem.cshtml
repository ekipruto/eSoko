@model eSoko.Models.ViewItemModel
@{
    ViewBag.Title = "ViewItem";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    td {
        padding: 20px;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/14560020750060463280.png" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/adlisting2.gif" class="img img-responsive" style=" height:500px;" />
    </div>



    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.proname <small>AD-ID:@Model.proid</small></h1>
        </div>

        <img src="@Url.Content(@Model.proimage)" style="width:800PX; height:450PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.prodescr</p>
        </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.proprice </td> </tr>
            <tr> <td>Category: </td> <td>@Model.catname </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.username <img src="@Url.Content(@Model.userimage)" style="width:40px; height:40px" /> </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.usercontact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["userid"]) == Convert.ToInt32(Model.profkuserid))
                    {

                        @Html.ActionLink("Delete This Item", "DeleteItem", new { @class = "btn btn-info", id = Model.proid })



                    }
                </td>
            </tr>

        </table>



    </div>




    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>


</div>